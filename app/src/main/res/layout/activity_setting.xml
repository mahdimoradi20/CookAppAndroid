<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivitiesInApp.setting">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ff305d">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/vazribold"
            android:text="تنظیمات"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="20dp" />

    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:cardElevation="5dp">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layoutDirection="rtl">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vazribold"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="25dp"
        android:background="#fd9"
        android:text="به روزرسانی"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkGetNewRec"
            android:fontFamily="@font/vazribold"
            android:layout_marginTop="10dp"
            android:layoutDirection="rtl"
            android:text = "میخوام دستور پخت های جدید را دریافت کنم"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vazribold"
            android:layoutDirection="rtl"
            android:id="@+id/chkShowNotif"
            android:enabled="false"
            android:text = "هنگام دریافت به روزرسانی به من خبر بده"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>